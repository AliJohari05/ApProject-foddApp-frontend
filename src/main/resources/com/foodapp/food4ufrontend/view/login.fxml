<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #f5f5f5);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.foodapp.food4ufrontend.controller.login.Login">
   <stylesheets>
      <URL value="@../css/application.css" />
   </stylesheets>

   <children>
      <VBox fx:id="loginContainer" alignment="CENTER" spacing="20.0" maxWidth="400" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
         <children>
            <Label text="Welcome to Food4U" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #8319ad;" />

            <MFXTextField fx:id="phoneField" floatingText="Phone Number" promptText="Phone Number" styleClass="login-field" />
            <MFXPasswordField fx:id="passwordField" floatingText="Password" promptText="Password" styleClass="login-field" />

            <MFXButton fx:id="loginButton" onAction="#handleLogin" text="Login" styleClass="login-button" />

            <Label fx:id="errorMessageLabel" textFill="red" wrapText="true" />

            <HBox alignment="CENTER" spacing="5.0">
               <Label text="Don't have an account?" />
               <Hyperlink text="Sign Up" onAction="#signup" />
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
