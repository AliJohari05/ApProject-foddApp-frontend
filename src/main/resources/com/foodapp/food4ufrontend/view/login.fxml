<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import io.github.palexdev.materialfx.controls.MFXPasswordField?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import java.net.URL?>
<AnchorPane prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #f5f5f5);"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.foodapp.food4ufrontend.controller.login.Login">
   <stylesheets>
      <URL value="@../css/application.css" />
   </stylesheets>

   <children>
      <StackPane AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                 AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
         <VBox alignment="CENTER" spacing="20.0"
               maxWidth="350"
               style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 25;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <children>
               <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #8319ad;"
                      text="Welcome to Food4U" />

               <MFXTextField fx:id="phoneField" floatingText="Phone Number" promptText="Phone Number"
                             styleClass="login-field" />
               <MFXPasswordField fx:id="passwordField" floatingText="Password" promptText="Password"
                                 styleClass="login-field" />

               <MFXButton fx:id="loginButton" onAction="#handleLogin"
                          styleClass="login-button" text="Login" />

               <Label fx:id="errorMessageLabel" textFill="red" wrapText="true" />

               <HBox alignment="CENTER" spacing="5.0">
                  <Label text="Don't have an account?" />
                  <Hyperlink onAction="#signup" text="Sign Up" />
               </HBox>
            </children>
         </VBox>
      </StackPane>
   </children>
</AnchorPane>
