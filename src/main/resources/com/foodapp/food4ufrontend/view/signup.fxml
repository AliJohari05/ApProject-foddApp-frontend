<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #f5f5f5);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.foodapp.food4ufrontend.controller.signup.Signup">
    <stylesheets>
        <URL value="@../css/application.css" />
    </stylesheets>

    <children>
        <ScrollPane fitToWidth="true" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <content>
                <StackPane alignment="CENTER">
                <VBox fx:id="signupContainer" alignment="CENTER" spacing="12.0" maxWidth="500" style="-fx-padding: 40;">
                    <children>
                        <Label text="Register to Food4U" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #8319ad;" />

                        <MFXTextField fx:id="nameField" floatingText="Full Name" promptText="Full Name" styleClass="login-field" />
                        <MFXTextField fx:id="phoneField" floatingText="Phone Number" promptText="Phone Number" styleClass="login-field" />
                        <MFXTextField fx:id="emailField" floatingText="Email" promptText="Email (Optional)" styleClass="login-field" />
                        <MFXPasswordField fx:id="passwordField" floatingText="Password" promptText="Password" styleClass="login-field" />
                        <MFXTextField fx:id="addressField" floatingText="Address" promptText="Address" styleClass="login-field" />
                        <MFXTextField fx:id="bankNameField" floatingText="Bank Name" promptText="Bank Name (for Seller/Courier)" styleClass="login-field" />
                        <MFXTextField fx:id="accountField" floatingText="Account Number" promptText="Account Number (for Seller/Courier)" styleClass="login-field" />

                        <ComboBox fx:id="roleComboBox" promptText="Select Role" />

                        <HBox alignment="CENTER" spacing="10">
                            <Label text="Profile Picture:" />
                            <MFXButton text="Upload Image" onAction="#handleImageUpload" styleClass="login-button" />
                            <ImageView fx:id="profileImageView" fitHeight="50.0" fitWidth="50.0" preserveRatio="true" />
                        </HBox>

                        <MFXButton fx:id="signupButton" onAction="#handleSignup" text="Sign Up" styleClass="login-button" />

                        <Label fx:id="errorMessageLabel" textFill="red" wrapText="true" />

                        <HBox alignment="CENTER" spacing="5.0">
                            <Label text="Already have an account?" />
                            <Hyperlink text="Login" onAction="#login" />
                        </HBox>
                    </children>
                </VBox>
                </StackPane>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
