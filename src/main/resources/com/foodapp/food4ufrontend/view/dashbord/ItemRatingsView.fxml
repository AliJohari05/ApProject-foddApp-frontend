<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.foodapp.food4ufrontend.controller.dashbord.ItemRatingsController"
      spacing="15" alignment="TOP_CENTER" style="-fx-background-color: white; -fx-padding: 20;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <ImageView fx:id="itemImageView" fitWidth="80" fitHeight="80" preserveRatio="true"/>
        <VBox>
            <Label fx:id="itemNameLabel" text="Food Item Name" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <Label fx:id="itemDescriptionLabel" text="Description" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
            <Label fx:id="itemPriceLabel" text="Price: $XXX" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
        </VBox>
    </HBox>

    <Label text="Ratings Summary" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
    <Label fx:id="averageRatingLabel" text="Average Rating: N/A" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #007bff;"/>

    <Label text="Customer Comments" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
    <TableView fx:id="commentsTable" VBox.vgrow="ALWAYS" prefHeight="250" prefWidth="600" styleClass="data-table">
        <columns>
            <TableColumn fx:id="commentUserColumn" text="User" prefWidth="100"/>
            <TableColumn fx:id="commentRatingColumn" text="Rating" prefWidth="80"/>
            <TableColumn fx:id="commentTextColumn" text="Comment" prefWidth="300"/>
            <TableColumn fx:id="commentImageColumn" text="Image" prefWidth="80"/> <TableColumn fx:id="commentDateColumn" text="Date" prefWidth="120"/>
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
    </TableView>

    <Label fx:id="viewRatingsErrorMessageLabel" textFill="red" wrapText="true"/>

    <HBox spacing="10" alignment="CENTER_RIGHT" VBox.vgrow="NEVER">
        <MFXButton text="Close" onAction="#handleClose" styleClass="login-button"/>
    </HBox>

</VBox>