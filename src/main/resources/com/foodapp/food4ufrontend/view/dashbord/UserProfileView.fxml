<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="TOP_CENTER" spacing="15" style="-fx-padding: 30; -fx-background-color: white;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.foodapp.food4ufrontend.controller.dashbord.UserProfileController">

    <Label text="My Profile" styleClass="section-title"/>

    <ImageView fx:id="profileImageView" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true"
               style="-fx-border-color: #ddd; -fx-border-width: 2; -fx-border-radius: 60; -fx-background-color: #f0f0f0;">
    </ImageView>
    <MFXButton text="Change Picture" onAction="#handleChangePicture" styleClass="login-button"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="250.0" />
        </columnConstraints>

        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <MFXTextField fx:id="fullNameField" promptText="Your Full Name" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS"/>

        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <MFXTextField fx:id="phoneField" promptText="Your Phone Number" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS"/>

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <MFXTextField fx:id="emailField" promptText="Your Email" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.hgrow="ALWAYS"/>

        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <MFXTextField fx:id="addressField" promptText="Your Address" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.hgrow="ALWAYS"/>

        <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <MFXTextField fx:id="roleField" promptText="Your Role" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.hgrow="ALWAYS"/>

        <Label text="Wallet Balance:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <MFXTextField fx:id="walletBalanceField" promptText="Your Wallet Balance" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.hgrow="ALWAYS"/>
    </GridPane>

    <Label fx:id="profileErrorMessageLabel" textFill="red" wrapText="true"/>

    <HBox spacing="10" alignment="CENTER">
        <MFXButton text="Edit Profile" onAction="#handleEditProfile" styleClass="login-button"/>
        <MFXButton fx:id="saveButton" text="Save Changes" onAction="#handleSaveChanges" styleClass="login-button" visible="false"/>
        <MFXButton fx:id="cancelButton" text="Cancel" onAction="#handleCancelEdit" styleClass="login-button" visible="false"/>
    </HBox>
</VBox>